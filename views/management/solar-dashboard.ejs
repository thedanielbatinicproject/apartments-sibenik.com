        <!-- Live Charts Section -->
        <div class="charts-section">
            <h3 class="charts-title">Live Data Charts</h3>
            <div class="time-range-toggle">
                <button class="toggle-btn active" data-range="24h">24h</button>
                <button class="toggle-btn" data-range="12h">12h</button>
